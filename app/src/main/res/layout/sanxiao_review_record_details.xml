<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/F5F5F5"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"
        android:background="@color/EB2A29"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="@dimen/fifty"
            android:layout_height="@dimen/fifty"
            android:paddingRight="@dimen/ten"
            android:src="@drawable/left_arrow"/>

        <TextView
            android:id="@+id/review_title"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/hundred"
            android:text="@string/review_record"
            android:textColor="@android:color/white"
            android:textSize="@dimen/eighteens"/>

        <TextView
            android:id="@+id/complete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:paddingRight="@dimen/ten"
            android:text="@string/complete"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sixteens"
            android:visibility="gone"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/place_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hundredforty"
                android:background="@android:color/white"
                android:src="@drawable/ic_launcher"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten">

                <TextView
                    android:layout_width="@dimen/eighty"
                    android:layout_height="@dimen/thirty"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/ten"
                    android:text="@string/place_name"/>

                <TextView
                    android:id="@+id/place_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/twentyfive"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/twenty"
                    android:textCursorDrawable="@drawable/edittext_color_cursor"
                    android:textSize="@dimen/fourteens"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten">

                <TextView
                    android:layout_width="@dimen/eighty"
                    android:layout_height="@dimen/thirty"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/ten"
                    android:text="@string/document_number"/>

                <TextView
                    android:id="@+id/document_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/twentyfive"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/twenty"
                    android:textCursorDrawable="@drawable/edittext_color_cursor"
                    android:textSize="15sp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="@dimen/eighty"
                    android:layout_height="@dimen/thirty"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/ten"
                    android:text="@string/check_person"/>

                <TextView
                    android:id="@+id/check_person"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/twentyfive"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/twenty"
                    android:textCursorDrawable="@drawable/edittext_color_cursor"
                    android:textSize="@dimen/fourteens"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten">

                <TextView
                    android:layout_width="@dimen/eighty"
                    android:layout_height="@dimen/thirty"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/ten"
                    android:text="@string/review_time"/>

                <TextView
                    android:id="@+id/check_time"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/twenty"
                    android:textCursorDrawable="@drawable/edittext_color_cursor"
                    android:textSize="@dimen/fourteens"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten">

                <TextView
                    android:layout_width="@dimen/eighty"
                    android:layout_height="@dimen/thirty"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/ten"
                    android:text="@string/check_address"/>

                <TextView
                    android:id="@+id/check_address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/twenty"
                    android:textCursorDrawable="@drawable/edittext_color_cursor"
                    android:textSize="@dimen/fourteens"/>

                <ImageView android:id="@+id/locating"
                    android:layout_width="@dimen/fifteen"
                    android:layout_height="@dimen/twenty"
                    android:src="@drawable/info_location"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="@dimen/thirty"
                android:layout_marginTop="@dimen/ten"
                android:background="@android:color/white"
                android:paddingLeft="@dimen/twenty">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/thirty"
                    android:gravity="center_vertical"
                    android:text="@string/exist_hidden"/>

                <TextView
                    android:id="@+id/review_rectification_after_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty"
                    android:gravity="center_vertical"
                    android:text="@string/rectification_after"
                    android:textColor="@color/f1EC015"/>
            </TableRow>

            <include layout="@layout/view"/>

            <ListView
                android:id="@+id/details_itemlistview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">
            </ListView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>