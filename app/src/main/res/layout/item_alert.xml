<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/ten"
              android:paddingEnd="@dimen/five"
              android:paddingLeft="@dimen/five"
              android:paddingRight="@dimen/five"
              android:paddingStart="@dimen/five">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#33000000"
            android:maxEms="15"
            android:padding="@dimen/three"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|top"
        android:orientation="horizontal">

        <LinearLayout  android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:orientation="vertical">

            <com.szzaq.jointdefence.widget.CircleImageView
                android:id="@+id/portrait"
                android:layout_width="@dimen/forty"
                android:layout_height="@dimen/forty"
                android:layout_marginTop="@dimen/one"
                android:scaleType="fitXY"
                android:src="@drawable/user"/>

            <TextView
                android:id="@+id/tvUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="15"
                android:textAppearance="?android:textAppearanceSmall"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvMsg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/receive_bg"
         android:layout_weight="5"
            />

        <!--<ImageView
            android:layout_width="@dimen/ten"
            android:layout_height="@dimen/ten"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/five"
            android:src="@drawable/red_dot"
            android:visibility="gone"
            />-->

        <ImageView android:layout_weight="1"
            android:id="@+id/warntype"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/fortythree"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/three"
            android:background="@drawable/ic_collections_bookmark_black_48dp"
            />

        <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            />

    </LinearLayout>

</LinearLayout>
