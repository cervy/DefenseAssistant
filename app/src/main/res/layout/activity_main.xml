<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:kingmv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/F5F5F5"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/main_my"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"
        android:background="@color/EB2A29"

        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/fifty"
            android:layout_weight="7"
            android:gravity="center"
            android:paddingLeft="@dimen/ten"
            android:paddingStart="@dimen/ten"
            android:text="@string/tas"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sixteens"
            />

        <ImageView
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"


            android:layout_weight="1"
            android:gravity="center"

            android:src="@drawable/main_set"/>
    </LinearLayout>
    <!--<View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one"
        android:layout_alignBottom="@id/LinearLayout1"
        android:background="@android:color/holo_blue_light"/>-->


    <ScrollView
        android:id="@+id/main_scrollview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/main_check_userinfo"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

                <com.szzaq.jointdefence.widget.CircleImageView
                    android:id="@+id/main_totel"
                    android:layout_width="@dimen/eighty"
                    android:layout_height="@dimen/eighty"
                    android:layout_margin="@dimen/ten"
                    android:contentDescription="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/nobody"
                    kingmv:border_color="@color/DDDDDD"
                    kingmv:border_width="@dimen/three"/>

                <LinearLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/five">

                    <TextView
                        android:id="@+id/main_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/five"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sixteens"/>

                    <TextView
                        android:id="@+id/main_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/f656565"
                        android:textSize="@dimen/sixteens"/>

                    <TextView
                        android:id="@+id/main_brigade1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sixteens"
                        />

                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/view"/>

            <LinearLayout
                android:id="@+id/tohousehold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/EB2A29"
                    android:gravity="center"
                    android:text="@string/household"
                    android:textColor="@android:color/white"
                    />

                <LinearLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/five"
                    android:paddingLeft="@dimen/five"
                    android:paddingStart="@dimen/five"
                    android:paddingTop="@dimen/five">

                    <TextView
                        android:id="@+id/unitname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/tens"/>

                    <TextView
                        android:id="@+id/unitnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/tens"/>

                    <TextView
                        android:id="@+id/unitaddr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/tens"/>

                    <TextView
                        android:id="@+id/firedangerproperties"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/tens"/>

                    <TextView
                        android:id="@+id/elseproperties"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/tens"/>
                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/view"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingTop="@dimen/five">

                <LinearLayout
                    android:id="@+id/layoutmessages"
                    android:layout_width="@dimen/zero"
                    android:layout_height="@dimen/hundred"
                    android:layout_margin="@dimen/one"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg_main"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/u30"
                        android:text="@string/messages"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutTask"
                    android:layout_width="@dimen/zero"
                    android:layout_height="@dimen/hundred"
                    android:layout_margin="@dimen/one"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg_main"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/zonedefense"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/u26"
                        android:text="@string/task"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutRecord"
                    android:layout_width="@dimen/zero"
                    android:layout_height="@dimen/hundred"
                    android:layout_margin="@dimen/one"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg_main"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/u34"
                        android:text="@string/record"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layoutMicroFireStation"
                    android:layout_width="@dimen/zero"
                    android:layout_height="@dimen/hundred"
                    android:layout_margin="@dimen/one"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg_main"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/u40"
                        android:text="@string/microstation"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutSOS"
                    android:layout_width="@dimen/zero"
                    android:layout_height="@dimen/hundred"
                    android:layout_margin="@dimen/one"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg_main"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/notifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/u42"
                        android:text="@string/helppls"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutCrossCheck"
                    android:layout_width="@dimen/zero"
                    android:layout_height="@dimen/hundred"
                    android:layout_margin="@dimen/one"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg_main"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/todeal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/u46"
                        android:text="@string/eachothercheck"
                        />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!--<ImageView
        android:id="@+id/main_to_top"
        android:layout_width="@dimen/fortythree"
        android:layout_height="@dimen/fortythree"
        android:layout_above="@id/main_scrollview"
        android:layout_alignBottom="@id/main_scrollview"
        android:layout_alignRight="@id/main_scrollview"
        android:layout_marginBottom="@dimen/fifty"
        android:layout_marginRight="@dimen/twenty"
        android:src="@drawable/main_to_top"
        android:visibility="gone"/>-->

</LinearLayout>