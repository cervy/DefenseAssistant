<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f5f5f5"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"
        android:background="@color/EB2A29"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/scannig_back"
            android:layout_width="@dimen/fifty"
            android:layout_height="@dimen/fifty"
            android:paddingRight="@dimen/ten"
            android:src="@drawable/left_arrow"/>

        <TextView
            android:id="@+id/info_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:paddingLeft="@dimen/forty"
            android:paddingRight="@dimen/eighty"
            android:text="@string/scanning_result"
            android:textColor="@android:color/white"
            android:textSize="@dimen/eighteens"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivSitePic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hundredtwenty"
                android:background="@color/DDDDDD"/>

            <LinearLayout
                android:id="@+id/layoutSiteBrief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/ten"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/five"
                        android:text="@string/place_name"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/five"
                        android:text="@string/site_type"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/five"
                        android:text="@string/owner_name"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/scanning_details"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSiteName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/five"
                        android:text="sfds"/>

                    <TextView
                        android:id="@+id/tvSiteType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/five"
                        android:text="df"/>

                    <TextView
                        android:id="@+id/tvOwnerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/five"
                        android:text="dfasdfsf"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.01"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="@dimen/eight"
                        android:layout_height="@dimen/thirteen"
                        android:layout_gravity="center"
                        android:src="@drawable/arrow"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/five"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/input_opinion"
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="@dimen/ten"
                        android:text="@string/input_opinion"
                        android:textColor="@color/radio_button_color"
                        android:textSize="@dimen/sixteens"/>

                    <View
                        android:layout_width="@dimen/one"
                        android:layout_height="@dimen/thirty"
                        android:layout_gravity="center"
                        android:background="@color/DDDDDD"/>

                    <RadioButton
                        android:id="@+id/main_record"
                        android:layout_width="@dimen/zero"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="@dimen/ten"
                        android:text="@string/main_record"
                        android:textColor="@color/radio_button_color"
                        android:textSize="@dimen/sixteens"/>
                </RadioGroup>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/one"
                    android:background="@drawable/main_gray_line">

                    <ImageView
                        android:id="@+id/main_red_line"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="matrix"
                        android:src="@drawable/line"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/zhongdian_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>