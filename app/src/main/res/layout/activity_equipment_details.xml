<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/F5F5F5"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"
        android:background="@color/EB2A29"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/equipment_details_back"
            android:layout_width="@dimen/fifty"
            android:layout_height="@dimen/fifty"
            android:paddingEnd="@dimen/ten"
            android:paddingRight="@dimen/ten"
            android:src="@drawable/left_arrow"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/hundred"
            android:paddingStart="@dimen/hundred"
            android:text="@string/equipment_details"
            android:textColor="@android:color/white"
            android:textSize="@dimen/eighteens"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="@dimen/fifty"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/ten"
                    android:text="@string/shebeimingcheng"

                    android:textSize="@dimen/fourteens"/>

                <TextView
                    android:id="@+id/shebeimingcheng"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:padding="@dimen/ten"
                    android:textSize="@dimen/fourteens"
                    />

            </LinearLayout>

            <include layout="@layout/view"/>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="@dimen/fifty"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/ten"
                    android:text="@string/shebeiweizhi"
                    android:textSize="@dimen/fourteens"/>

                <TextView
                    android:id="@+id/shebeiweizhi"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:padding="@dimen/ten"
                    android:textSize="@dimen/fourteens"
                    />

            </LinearLayout>

            <include layout="@layout/view"/>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="@dimen/fifty"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/ten"
                    android:text="@string/unitname"
                    android:textSize="@dimen/fourteens"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:padding="@dimen/ten"
                    android:textSize="@dimen/fourteens"
                    />

            </LinearLayout>

            <include layout="@layout/view"/>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="@dimen/fifty"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/ten"
                    android:text="@string/zerenren"
                    android:textSize="@dimen/fourteens"/>

                <TextView
                    android:id="@+id/zerenren"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:drawableRight="@drawable/call_phone"
                    android:drawableEnd="@drawable/call_phone"
                    android:gravity="center_vertical"
                    android:padding="@dimen/ten"
                    android:textSize="@dimen/fourteens"
                    />

            </LinearLayout>

            <include layout="@layout/view"/>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="@dimen/fifty"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/ten"
                    android:text="@string/guanliren"
                    android:textSize="@dimen/fourteens"/>

                <TextView
                    android:id="@+id/guanliren"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:drawableRight="@drawable/call_phone"
                    android:drawableEnd="@drawable/call_phone"
                    android:gravity="center_vertical"
                    android:padding="@dimen/ten"
                    android:textSize="@dimen/fourteens"
                    />

            </LinearLayout>

            <include layout="@layout/view"/>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="@dimen/fifty"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/ten"
                    android:text="@string/weibaodanwei"
                    android:textSize="@dimen/fourteens"/>

                <TextView
                    android:id="@+id/weibaodanwei"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:padding="@dimen/ten"
                    android:textSize="@dimen/fourteens"
                    />

            </LinearLayout>

            <include layout="@layout/view"/>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="@dimen/fifty"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/ten"
                    android:text="@string/weibaoyuan"
                    android:textSize="@dimen/fourteens"/>

                <TextView
                    android:id="@+id/weibaoyuan"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:drawableRight="@drawable/call_phone"
                    android:drawableEnd="@drawable/call_phone"
                    android:gravity="center_vertical"
                    android:padding="@dimen/ten"

                    android:textSize="@dimen/fourteens"
                    />

            </LinearLayout>

            <include layout="@layout/view"/>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="@dimen/fifty"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/ten"
                    android:text="@string/guanxiadanwei"
                    android:textSize="@dimen/fourteens"/>

                <TextView
                    android:id="@+id/guanxiadanwei"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:padding="@dimen/ten"
                    android:textSize="@dimen/fourteens"
                    />

            </LinearLayout>

            <include layout="@layout/view"/>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="@dimen/fifty"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/ten"
                    android:text="@string/jianduyuan"
                    android:textSize="@dimen/fourteens"/>

                <TextView
                    android:id="@+id/jianduyuan"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:drawableRight="@drawable/call_phone"
                    android:drawableEnd="@drawable/call_phone"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:padding="@dimen/ten"
                    android:textSize="@dimen/fourteens"
                    />

            </LinearLayout>

            <include layout="@layout/view"/>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="@dimen/fifty"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/ten"
                    android:text="@string/xieguanyuan"
                    android:textSize="@dimen/fourteens"
                    />

                <TextView
                    android:id="@+id/xieguanyuan"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:drawableRight="@drawable/call_phone"
                    android:drawableEnd="@drawable/call_phone"
                    android:gravity="center_vertical"
                    android:padding="@dimen/ten"
                    android:textSize="@dimen/fourteens"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/zhongdian_details_equipmentlist"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_marginTop="@dimen/twenty"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/ten"
                android:text="@string/zhongdian_details_equipmentlist"
                android:textSize="@dimen/fourteens"

                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>