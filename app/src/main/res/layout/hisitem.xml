<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="@dimen/ten"
    >


    <TextView
        android:id="@+id/checkerr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"

        android:layout_marginTop="@dimen/five"


        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
        android:id="@+id/profile"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkerr"
        android:layout_marginTop="@dimen/five"

        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
        android:id="@+id/remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/profile"
        android:layout_alignStart="@+id/profile"
        android:layout_below="@+id/profile"
        android:layout_marginTop="@dimen/five"

        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
        android:id="@+id/checker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/remark"
        android:layout_alignStart="@+id/remark"
        android:layout_below="@+id/remark"
        android:layout_marginTop="@dimen/five"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
        android:id="@+id/manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checker"
        android:layout_marginLeft="@dimen/twenty"
        android:layout_marginStart="@dimen/twenty"
        android:layout_toEndOf="@+id/checker"
        android:layout_toRightOf="@+id/checker"

        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
        android:id="@+id/checktimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkerr"
        android:layout_marginLeft="@dimen/eighty"
        android:layout_marginStart="@dimen/eighty"
        android:layout_toEndOf="@+id/checkerr"
        android:layout_toRightOf="@+id/checkerr"

        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/manager"
        android:layout_marginTop="@dimen/ten"
        android:background="#dddddd"/>

    <TextView android:background="@drawable/button"
        android:id="@+id/delete"
              android:padding="@dimen/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/deletee"/>
</RelativeLayout>
