<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical" >
     <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EB2A29"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/equipment_back"
            android:layout_width="@dimen/fifty"
            android:layout_height="@dimen/fifty"
            android:paddingRight="@dimen/ten"
            android:paddingEnd="@dimen/ten"
            android:src="@drawable/left_arrow" />

        <TextView
            android:id="@+id/info_select"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="@dimen/five"
            android:paddingEnd="@dimen/five"
            android:text="@string/activity_equipment_list_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/eighteens" />
		
        <ImageView
            android:id="@+id/equipment_add"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingRight="@dimen/ten"
            android:paddingEnd="@dimen/ten"
            android:src="@drawable/info_add" />
    </LinearLayout>

     <ListView
         android:padding="10dp"
         android:scrollbars="none"
         android:id="@+id/equipment_listview"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" >
     </ListView>

</LinearLayout>
