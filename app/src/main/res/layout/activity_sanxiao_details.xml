<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/F5F5F5"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"
        android:background="@color/EB2A29"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sanxiao_details_back"
            android:layout_width="@dimen/fifty"
            android:layout_height="@dimen/fifty"
            android:paddingRight="@dimen/ten"
            android:src="@drawable/left_arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center|right"
            android:paddingRight="@dimen/thirtyfive"
            android:text="@string/sanxiao_details"
            android:textColor="@android:color/white"
            android:textSize="@dimen/eighteens"/>

        <ImageView
            android:id="@+id/info_select"
            android:layout_width="@dimen/fifty"
            android:layout_height="@dimen/fifty"
            android:src="@drawable/share_icon"/>

        <ImageView
            android:id="@+id/sanxiao_info_edit"
            android:layout_width="@dimen/fifty"
            android:layout_height="@dimen/fifty"
            android:src="@drawable/edit_icon"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/list_srcoll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/place_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hundredforty"
                android:background="@color/DDDDDD"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/five">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/thirty"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/ten"
                    android:text="@string/place_name"/>

                <TextView
                    android:id="@+id/place_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/twentyfive"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="@dimen/twenty"
                    android:paddingRight="@dimen/twenty"
                    android:textSize="@dimen/fourteens"/>

               <!-- <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/thirty"
                    android:layout_marginRight="@dimen/five"
                    android:background="@drawable/activity_check_button"
                    android:padding="@dimen/five"
                    android:text="@string/main_record"
                    android:textColor="@color/EB2A29"
                    android:textSize="@dimen/fourteens"/>-->
            </TableRow>

            <include layout="@layout/view"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/five">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/thirty"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/ten"
                    android:text="@string/place_address"/>

                <TextView
                    android:id="@+id/place_address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/twentyfive"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/twenty"

                    android:textSize="@dimen/fourteens"
                    />
            </TableRow>

            <include layout="@layout/view"/>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/five">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/thirty"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/ten"
                    android:text="@string/place_type"/>

                <TextView
                    android:id="@+id/place_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/twentyfive"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="@dimen/twenty"
                    android:paddingRight="@dimen/twenty"

                    android:textSize="@dimen/fourteens"/>
            </TableRow>

            <include layout="@layout/view"/>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/five">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/business_range"/>

                <TextView
                    android:id="@+id/business_range"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"

                    android:textSize="15sp"/>
            </TableRow>

            <include layout="@layout/view"/>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/place_license"/>

                <TextView
                    android:id="@+id/place_license"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"

                    android:textSize="15sp"/>
            </TableRow>

            <include layout="@layout/view"/>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/place_number"/>

                <TextView
                    android:id="@+id/place_number"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"

                    android:textSize="15sp"/>
            </TableRow>

            <include layout="@layout/view"/>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/place_floor"/>

                <TextView
                    android:id="@+id/place_floor"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"

                    android:textSize="15sp"/>
            </TableRow>

            <include layout="@layout/view"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/sanxiao_owner"/>

                <TextView
                    android:id="@+id/tvOwner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/twentyfive"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_marginStart="@dimen/twenty"
                    android:layout_weight="2"
                    android:gravity="start|center_vertical"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tvOwnerTel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/twentyfive"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_marginStart="@dimen/twenty"
                    android:layout_weight="1"
                    android:autoLink="phone"
                    android:gravity="start|center_vertical"
                    android:textSize="15sp"/>
            </TableRow>


            <include layout="@layout/view"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/sanxiao_head"/>

                <TextView
                    android:id="@+id/tvResponsible"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="2"
                    android:gravity="start|center_vertical"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tvResponsibleTel"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:autoLink="phone"
                    android:gravity="start|center_vertical"
                    android:textSize="15sp"/>
            </TableRow>

            <include layout="@layout/view"/>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/sanxiao_administrator"/>

                <TextView
                    android:id="@+id/tvAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="2"
                    android:gravity="start|center_vertical"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tvAdminTel"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:autoLink="phone"
                    android:gravity="start|center_vertical"
                    android:textSize="15sp"/>
            </TableRow>


            <include layout="@layout/view"/>

            <ListView
                android:id="@+id/sanxiao_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/twenty">
            </ListView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>