<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/F5F5F5"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/EB2A29"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/task_details_back"
            android:layout_width="@dimen/fifty"
            android:layout_height="@dimen/fifty"
            android:paddingRight="@dimen/ten"
            android:src="@drawable/left_arrow" />

        <TextView
            android:id="@+id/info_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:paddingLeft="@dimen/forty"
            android:paddingRight="@dimen/twentyfive"
            android:text="@string/task_details"
            android:textColor="@android:color/white"
            android:textSize="@dimen/eighteens" />

        <ImageView
            android:id="@+id/task_captrue"
            android:layout_width="@dimen/fortythree"
            android:layout_height="@dimen/fortythree"
            android:layout_weight="0.01"
            android:src="@drawable/captrue" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/task_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/LinearLayout1"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/ten" >

                <TextView
                    android:layout_width="@dimen/hundred"
                    android:layout_height="@dimen/thirty"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/ten"
                    android:text="@string/task_name" />

                <TextView
                    android:id="@+id/task_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/twentyfive"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="@dimen/twenty"
                    android:paddingRight="@dimen/twenty"
                    android:textCursorDrawable="@drawable/edittext_color_cursor"
                    android:textSize="@dimen/fourteens" />
            </TableRow>

         <include layout="@layout/view"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/ten" >

                <TextView
                    android:layout_width="@dimen/hundred"
                    android:layout_height="@dimen/thirty"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/ten"
                    android:text="@string/task_type" />

                <TextView
                    android:id="@+id/task_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/twentyfive"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="@dimen/twenty"
                    android:paddingRight="@dimen/twenty"
                    android:textColor="@color/f808080"
                    android:textCursorDrawable="@drawable/edittext_color_cursor"
                    android:textSize="@dimen/fourteens" />
            </TableRow>
<include layout="@layout/view"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/ten" >

                <TextView
                    android:layout_width="@dimen/hundred"
                    android:layout_height="@dimen/thirty"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/ten"
                    android:text="@string/designated_person" />

                <TextView
                    android:id="@+id/designated_person"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/twentyfive"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="@dimen/twenty"
                    android:paddingRight="@dimen/twenty"
                    android:textColor="@color/f808080"
                    android:textCursorDrawable="@drawable/edittext_color_cursor"
                    android:textSize="@dimen/fourteens" />
            </TableRow>

           <include layout="@layout/view"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/ten" >

                <TextView
                    android:layout_width="@dimen/hundred"
                    android:layout_height="@dimen/thirty"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/ten"
                    android:text="@string/last_task_time" />

                <TextView
                    android:id="@+id/last_task_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/twentyfive"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="@dimen/twenty"
                    android:textColor="@color/f808080"
                    android:textCursorDrawable="@drawable/edittext_color_cursor"
                    android:textSize="@dimen/fourteens" />
            </TableRow>

         <include layout="@layout/view"/>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/ten" >

                <TextView
                    android:layout_width="@dimen/hundred"
                    android:layout_height="@dimen/thirty"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/last_task_trouble" />

                <TextView
                    android:id="@+id/last_task_trouble"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/twentyfive"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="@dimen/twenty"
                    android:paddingRight="@dimen/twenty"
                    android:textColor="@color/f808080"
                    android:textCursorDrawable="@drawable/edittext_color_cursor"
                    android:textSize="@dimen/fourteens" />
            </TableRow>
<include layout="@layout/view"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/ten"
                android:paddingTop="@dimen/ten" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/five"
                    android:paddingLeft="@dimen/ten"
                    android:text="@string/exist_trouble" />

                <LinearLayout
                    android:id="@+id/image_click"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/ten"
                    android:paddingRight="@dimen/ten"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="@dimen/eighty"
                            android:layout_height="@dimen/eighty"
                            android:scaleType="fitXY" />

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="@dimen/eighty"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:padding="@dimen/five"
                            android:singleLine="true"
                            android:textColor="@color/f808080" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="@dimen/eighty"
                            android:layout_height="@dimen/eighty"
                            android:scaleType="fitXY" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="@dimen/eighty"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:padding="@dimen/five"
                            android:singleLine="true"
                            android:textColor="@color/f808080" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="@dimen/eighty"
                            android:layout_height="@dimen/eighty"
                            android:scaleType="fitXY" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="@dimen/eighty"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:padding="@dimen/five"
                            android:singleLine="true"
                            android:textColor="@color/f808080" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <include
                layout="@layout/sanxiao_review_record" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/check_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty"
        android:layout_above="@+id/task_scrollview"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/five"
        android:background="@drawable/activity_check"
        android:text="@string/check"
        android:textColor="@android:color/white"
        android:textSize="@dimen/eighteens" />

</RelativeLayout>