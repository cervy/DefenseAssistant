<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"
        android:background="@color/EB2A29"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/fifty"
            android:layout_height="@dimen/fifty"
            android:paddingRight="@dimen/ten"
            android:paddingEnd="@dimen/ten"
            android:src="@drawable/left_arrow" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/hundred"
            android:paddingStart="@dimen/hundred"
            android:text="@string/my_change_pwd"
            android:textColor="@android:color/white"
            android:textSize="@dimen/eighteens" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/tvOldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginRight="@dimen/twenty"
            android:layout_marginTop="@dimen/fifty"
            android:background="@color/f99FFFFFF"
            android:inputType="textPassword"
            android:hint="@string/rawmmpls"
            android:padding="@dimen/ten"
            android:text="" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginRight="@dimen/twenty"
            android:background="@color/DDDDDD" />

        <EditText
            android:id="@+id/tvNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginRight="@dimen/twenty"
            android:background="@color/f99FFFFFF"
            android:hint="@string/newmmpls"
            android:inputType="textPassword"
            android:padding="@dimen/ten"
            android:text="" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginRight="@dimen/twenty"
            android:background="@color/DDDDDD" />
        <EditText
            android:id="@+id/tvNewPassword1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginRight="@dimen/twenty"
            android:background="@color/f99FFFFFF"
            android:hint="@string/surenewmm"
            android:inputType="textPassword"
            android:padding="@dimen/ten"
            android:text="" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginRight="@dimen/twenty"
            android:background="@color/DDDDDD" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/modify"
                android:layout_width="@dimen/hundred"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg_gold"
                android:padding="@dimen/ten"
                android:text="@string/modify"
                android:textColor="@android:color/white" />

            <Button

                android:id="@+id/btnCancel"
                android:layout_width="@dimen/hundred"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginStart="@dimen/ten"
                android:background="@drawable/button_bg_gold"
                android:padding="@dimen/ten"
                android:text="@string/userinfo_edit_cancel"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>